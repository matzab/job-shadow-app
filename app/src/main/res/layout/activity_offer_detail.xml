<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    android:paddingEnd="15dp"
    tools:context=".activities.offer_activities.OfferDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:orientation="vertical">

        <TextView
            android:id="@+id/offer_category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OFFER CATEGORY"
            android:textColor="#A9A9A9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/offer_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/offer_company_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OFFER COMPANY"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/offer_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="italic" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map fragment here?" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/offer_length_explain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Period of this offer:" />

        <TextView
            android:id="@+id/offer_length_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/offer_position_quals_explain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qualification(s) for getting this job:" />

        <TextView
            android:id="@+id/offer_position_quals_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#00bbbb"
            android:text="APPLY"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>